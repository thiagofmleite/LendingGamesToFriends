@model LendGamesToMyFriends.Models.Game

@{
    if (Model != null)
    {
        ViewBag.Title = "Editar Jogo: " + Model.Title;
    }
    else
    {
        ViewBag.Title = "Novo Jogo";
    }
}

<h2>@ViewBag.Title</h2>
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">@TempData["Error"].ToString()</div>
}
@using (Html.BeginForm(Model != null ? "Edit" : "New", "Game", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(g => g.Title, "Seu Nome:")
        @Html.TextBoxFor(g => g.Title, new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(g => g.Title)
    </div>

    <div class="form-group">
        @Html.ActionLink("Voltar", "Index", new { @class = "btn btn-default" })
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
}
<hr />
<div class="form-group">
    @Html.ActionLink("Remover Jogo", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
</div>
