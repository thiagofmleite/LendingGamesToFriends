@model LendGamesToMyFriends.Models.Login
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()

    <h2 class="form-signin-heading">Entrar no Sistema</h2>
    <div class="form-group">
        @Html.LabelFor(l => l.Email, "Seu E-mail", new { @class = "sr-only" })
        @Html.TextBoxFor(l => l.Email, null, new { @class = "form-control", type = "email", required = "required", placeholder = "Email" })
        <span class="text-danger">@Html.ValidationMessageFor(l => l.Email)</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Password, "Sua Senha", new { @class = "sr-only" })
        @Html.TextBoxFor(l => l.Password, null, new { @class = "form-control", type = "password", required = "required", placeholder = "Senha" })
        <span class="text-danger">@Html.ValidationMessageFor(l => l.Email)</span>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
        @Html.ActionLink("Ainda não sou registrado", "Register", "Home")
    </div>

}
